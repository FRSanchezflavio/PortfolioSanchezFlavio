{
  "name": "portfolio-fullstack-server",
  "version": "1.0.0",
  "description": "Servidor para el portfolio de un desarrollador full stack.",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "ts-node-dev src/index.ts",
    "build": "tsc",
    "test": "jest",
    "postinstall": "prisma generate --schema=../prisma/schema.prisma",
    "db:generate": "prisma generate --schema=../prisma/schema.prisma",
    "db:push": "prisma db push --schema=../prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=../prisma/schema.prisma",
    "db:studio": "prisma studio --schema=../prisma/schema.prisma",
    "db:reset": "prisma migrate reset --schema=../prisma/schema.prisma"
  },
  "prisma": {
    "schema": "../prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "nodemailer": "^6.4.11",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^24.8.1",
    "@types/nodemailer": "^7.0.2",
    "@types/pg": "^8.10.0",
    "jest": "^27.0.6",
    "prisma": "^5.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "portfolio",
    "fullstack",
    "typescript",
    "express"
  ],
  "author": "Tu Nombre",
  "license": "MIT"
}
